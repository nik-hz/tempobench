{
    "name": "tempo-bench",
    "image": "nik101010/tempo-rl:latest",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "mounts": [
        "source=${localWorkspaceFolder}/tlsf_specs,target=/specs,type=bind",
        "source=${env:SSH_AUTH_SOCK},target=/ssh-agent,type=bind"
    ],
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "runArgs": [
        "--network=host",
        "--env-file",
        ".devcontainer/.env"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.formatting.provider": "black",
                "editor.formatOnSave": true,
                "python.formatting.blackArgs": [
                    "--line-length=88"
                ],
                "python.sortImports.args": [
                    "--profile",
                    "black",
                    "--line-length",
                    "88"
                ],
                "python.linting.enabled": true,
                "python.linting.flake8Enabled": true,
                "python.linting.flake8Args": [
                    "--max-line-length=88",
                    "--extend-ignore=E203,W503"
                ],
                "terminal.integrated.defaultProfile.linux": "zsh"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.black-formatter",
                "ms-python.isort",
                "github.vscode-pull-request-github",
                "vscodevim.vim",
                "docker.docker",
                "ms-azuretools.vscode-docker",
                "rogalmic.bash-debug",
                "anthropic.claude-code",
                "eamodio.gitlens",
                "visualstudioexptteam.vscodeintellicode",
                "yzhang.markdown-all-in-one",
                "foxundermoon.shell-format",
                "redhat.vscode-yaml",
                "tamasfe.even-better-toml"
            ]
        }
    },
    "overrideCommand": true,
    "postCreateCommand": "pre-commit install && git clone https://github.com/nik-hz/dotfiles.git ~/.dotfiles && cd ~/.dotfiles && ./install.sh",
    "portsAttributes": {
        "6006": {
            "label": "TensorBoard",
            "onAutoForward": "openPreview"
        }
    }
}
